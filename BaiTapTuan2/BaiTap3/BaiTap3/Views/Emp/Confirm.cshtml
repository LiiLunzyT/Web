
@{
    ViewBag.Title = "Confirm";
}

<div class="emp-container">
    <h3>THÔNG TIN THÀNH VIÊN ĐÃ ĐĂNG KÝ</h3>
    <div class="emp-body">
        <div class="emp-avatar">
            <img src=@ViewBag.Avatar alt="Không có ảnh đại diện"/>
        </div>
        <div class="emp-info">
            <div class="emp-item">
                <span class="emp-header">Mã Nhân viên: </span>
                <span>@ViewBag.EmpId</span>
            </div>
            <div class="emp-item">
                <span class="emp-header">Họ tên: </span>
                <span>@ViewBag.Name</span>
            </div>
            <div class="emp-item">
                <span class="emp-header">Ngày sinh: </span>
                <span>@ViewBag.BirthOfDate</span>
            </div>
            <div class="emp-item">
                <span class="emp-header">Email: </span>
                <span>@ViewBag.Email</span>
            </div>
            <div class="emp-item">
                <span class="emp-header">Mật khẩu: </span>
                <span>@ViewBag.Password</span>
            </div>
            <div class="emp-item">
                <span class="emp-header">Phòng ban: </span>
                <span>@ViewBag.Department</span>
            </div>
        </div>
    </div>
</div>

