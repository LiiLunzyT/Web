@model BaiTap5.Models.EmpModel

@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN THÀNH VIÊN ĐÃ ĐĂNG KÝ</h2>

<div class="card">
    <div class="avatar">
        <img src=@Model.EmpAvatar />
    </div>
    <div class="card-container">
        <div class="card-item">
            <div class="item-title">@Html.DisplayNameFor(model => model.EmpID)</div>
            <div class="item-info">@Html.DisplayFor(model => model.EmpID)</div>
        </div>
        <div class="card-item">
            <div class="item-title">@Html.DisplayNameFor(model => model.EmpName)</div>
            <div class="item-info">@Html.DisplayFor(model => model.EmpName)</div>
        </div>
        <div class="card-item">
            <div class="item-title">@Html.DisplayNameFor(model => model.EmpEmail)</div>
            <div class="item-info">@Html.DisplayFor(model => model.EmpEmail)</div>
        </div>
        <div class="card-item">
            <div class="item-title">@Html.DisplayNameFor(model => model.EmpDoB)</div>
            <div class="item-info">@Html.DisplayFor(model => model.EmpDoB)</div>
        </div>
        <div class="card-item">
            <div class="item-title">@Html.DisplayNameFor(model => model.EmpPassword)</div>
            <div class="item-info">@Html.DisplayFor(model => model.EmpPassword)</div>
        </div>
        <div class="card-item">
            <div class="item-title">@Html.DisplayNameFor(model => model.EmpDepartment)</div>
            <div class="item-info">@Html.DisplayFor(model => model.EmpDepartment)</div>
        </div>
    </div>
    <div class="btn-back">
        @Html.ActionLink("Quay lại","Index")
    </div>
</div>

